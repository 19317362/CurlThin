<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup Label="NuGet">
    <PackageId>CurlThin.Native</PackageId>
    <Version>7.54.0.0</Version>
    <Title>libcurl native binaries</Title>
    <Description>Contains 32bit and 64bit binary of libcurl for Windows.</Description>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
  </PropertyGroup>
  
  <ItemGroup>
    <None Remove="NuGet.png" />
  </ItemGroup>

  <PropertyGroup>
    <TargetFramework>netstandard1.5</TargetFramework>
    <PackageIconUrl>https://raw.githubusercontent.com/stil/CurlThin/master/CurlThin.Native/NuGet.png</PackageIconUrl>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Resources\**" />
    <EmbeddedResource Include="Resources.zip" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="System.Runtime.InteropServices.RuntimeInformation" Version="4.3.0" />
  </ItemGroup>
</Project>